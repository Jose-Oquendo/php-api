{
    "name": "juan/test",
    "description": "A simple way to use php without framework",
    "type": "project",
    "license": "propietary",
    "autoload": {
        "psr-4": {
            "Juan\\Test\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Jose-Oquendo",
            "email": "oquendojuanjose@gmail.com"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "symfony/dotenv": "^6.0",
        "robmorgan/phinx": "^0.14.0",
        "php-di/php-di": "^7.0"
    },
    "scripts": {
        "phinx-create": "./vendor/bin/phinx --configuration=\"./config/phinx.php\" create ",
        "phinx-migrate": "./vendor/bin/phinx --configuration=\"./config/phinx.php\" migrate ",
        "phinx-rollback": "./vendor/bin/phinx --configuration=\"./config/phinx.php\" rollback ",
        "run-test": "./vendor/bin/phpunit --bootstrap ./src/Tests/launch.php ./src/Tests"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.6"
    }
}
